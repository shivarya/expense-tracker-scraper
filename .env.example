# Scraper environment variables
# Copy to .env and configure

# PHP Backend API
API_URL=http://localhost:8000

# OpenAI API (for SMS parsing)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo

# Azure OpenAI (alternative to OpenAI - leave OpenAI fields empty if using Azure)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-key
AZURE_OPENAI_DEPLOYMENT=gpt-4-turbo
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Anthropic Claude API (alternative to OpenAI)
ANTHROPIC_API_KEY=sk-ant-...

# Gmail API credentials (for CAMS/KFintech MF statements)
GMAIL_CLIENT_ID=your-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-client-secret
GMAIL_REDIRECT_URI=http://localhost:3000/oauth2callback

# Zerodha credentials (optional - for automated login)
ZERODHA_USER_ID=
ZERODHA_PASSWORD=
ZERODHA_PIN=

# Groww credentials (optional)
GROWW_EMAIL=
GROWW_PASSWORD=

# SMS source (android or file)
# - 'android': Read from Android device via ADB
# - 'file': Read from sms-export.json file
SMS_SOURCE=file

# SMS export file path (if SMS_SOURCE=file)
SMS_FILE_PATH=./data/sms-export.json

# Sync settings
SYNC_STOCKS=true
SYNC_MUTUAL_FUNDS=true
SYNC_TRANSACTIONS=true
AUTO_SYNC_INTERVAL_HOURS=24

# Debug mode
DEBUG=false
